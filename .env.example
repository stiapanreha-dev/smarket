# Application
NODE_ENV=development
PORT=3000
API_PREFIX=api/v1

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=snailmarket
DB_PASSWORD=snailmarket_password
DB_DATABASE=snailmarket

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT
JWT_SECRET=your-secret-key-change-this-in-production-min-32-chars
JWT_REFRESH_SECRET=your-refresh-secret-key-change-this-in-production-min-32-chars
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=30d

# AWS S3 (LocalStack for development)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_S3_BUCKET=snailmarket-bucket
AWS_ENDPOINT=http://localhost:4566

# i18n
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,ru,ar

# Stripe Payment Gateway (ТЕСТОВЫЕ ключи для разработки!)
# Получите тестовые ключи: https://dashboard.stripe.com/test/apikeys
# ВАЖНО: Используйте только TEST ключи для разработки (pk_test_..., sk_test_...)
# НИКОГДА не используйте LIVE ключи (pk_live_..., sk_live_...) в разработке!
STRIPE_SECRET_KEY=sk_test_your_test_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_test_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_test_webhook_secret_here
